        <!-- v1.6.6.2 短信调用公共接口 lhm 2013-10-25 end -->
        <!-- v1.6.7.2 RDPROJECT-430 lx 2013-12-02 start -->
        <property name="linkageDao">
            <ref bean="linkageDao" />
        </property>
        <!-- v1.6.7.2 短信调用公共接口 lhm 2013-12-02 end -->
    </bean>
  	
	 <bean id="userLogDao"
        class="com.p2psys.dao.jdbc.UserLogDaoImpl">
        <property name="dataSource">
            <ref bean="dataSource" />
        </property>
    </bean>
    
    <bean id="userLogService"
        class="com.p2psys.service.impl.UserLogServiceImpl">
        <property name="userLogDao">
            <ref bean="userLogDao" />
        </property>
    </bean>
    
</beans>