        class="com.p2psys.dao.jdbc.UserCacheDaoImpl">
        <property name="dataSource">
            <ref bean="dataSource" />
        </property>
    </bean>
    
  <bean id="userService"
        class="com.p2psys.service.impl.UserServiceImpl">
        <property name="userDao">
            <ref bean="userDao" />
        </property>
        <property name="userTrackDao">
            <ref bean="userTrackDao" />
        </property>
         <property name="userCacheDao">
            <ref bean="userCacheDao" />
        </property>
        <property name="userCreditDao">
            <ref bean="userCreditDao" />
        </property>
        <property name="accountDao">
            <ref bean="accountDao" />
        </property>
         <property name="userAmountDao">
            <ref bean="userAmountDao" />
